<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/vIvFox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="@dimen/dp_16"
            tools:src="@drawable/ic_fox" />

        <TextView
            android:id="@+id/vTvTitleNameLogin"
            style="@style/TextView.TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_16"
            android:text="@string/poifox" />

        <TextView
            style="@style/TextView.SmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:text="@string/description" />

        <View style="@style/Divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center">

            <TextView
                android:id="@+id/vTvLogin"
                style="@style/TextView.SmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textColor="@color/colorOrange" />

            <TextView
                style="@style/TextView.SmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_6"
                android:text="@string/or"
                android:textColor="@color/colorGray" />

            <TextView
                android:id="@+id/vTvSignUp"
                style="@style/TextView.SmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_6"
                android:text="@string/signup"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

        <LinearLayout
            style="@style/EditTextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_envelope" />

            <EditText
                android:id="@+id/vEtUsername"
                style="@style/EditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/username" />

        </LinearLayout>

        <LinearLayout
            style="@style/EditTextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_lock" />

            <EditText
                android:id="@+id/vEtPassword"
                style="@style/EditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/password" />

        </LinearLayout>

        <LinearLayout
            style="@style/EditTextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_lock" />

            <EditText
                android:id="@+id/vEtConfirmPassword"
                style="@style/EditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/confirm_password" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView.SmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/keep_me_logged_in"
                android:textColor="@color/colorGray" />

            <ImageView
                android:id="@+id/vIvKeepLogIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:background="@drawable/ic_uncheck" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/vFlLogIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:background="@drawable/bg_rec_rounded_12"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible">

            <ImageView
                android:id="@+id/vIvKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:src="@drawable/ic_key" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/vFlSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:background="@drawable/bg_rec_rounded_12"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone">

            <TextView
                style="@style/TextView.MiddleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/signup" />

        </FrameLayout>

        <TextView
            android:id="@+id/vTvRecoverPassword"
            style="@style/TextView.SmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recover_password" />

    </LinearLayout>

</ScrollView>