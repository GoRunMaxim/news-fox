<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="EditTextLayout" parent="android:Widget.EditText">
        <item name="android:layout_marginStart">@dimen/dp_16</item>
        <item name="android:layout_marginEnd">@dimen/dp_16</item>
        <item name="android:layout_marginBottom">@dimen/dp_16</item>
        <item name="android:background">@drawable/ic_rec_rounded_12</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
    </style>

    <style name="EditText" parent="android:Widget.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/ptsans</item>
        <item name="android:background">@drawable/ic_rec_rounded_12</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/dp_4</item>
    </style>

    <style name="TextView" />

    <style name="TextView.TitleText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/ptsans</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextView.MiddleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/ptsans</item>
    </style>

    <style name="TextView.SmallText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/ptsans</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
